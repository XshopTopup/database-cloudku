</main>

<script>
    const apiKey = localStorage.getItem('apiKey');
    const username = localStorage.getItem('username') || 'Member';

    if (!apiKey) window.location.href = '/login';

    document.getElementById('displayUsername').innerText = username;
    document.getElementById('apiKeyInput').value = apiKey;

    function logout() {
        localStorage.clear();
        window.location.href = '/login';
    }

    function toggleKey() {
        const input = document.getElementById('apiKeyInput');
        input.type = input.type === 'password' ? 'text' : 'password';
    }

    function copyKey() {
        navigator.clipboard.writeText(document.getElementById('apiKeyInput').value);
        alert('API Key Copied!');
    }

    async function loadRepos() {
        const listContainer = document.getElementById('repoList');
        const icon = document.getElementById('refreshIcon');
        icon.classList.add('animate-spin');

        try {
            const res = await fetch('/api/my-folders', {
                headers: { 'x-api-key': apiKey }
            });
            const data = await res.json();
            
            if (!data.folders || data.folders.length === 0) {
                listContainer.innerHTML = `
                    <div class="flex flex-col items-center justify-center py-20 opacity-20">
                        <i class="fas fa-folder-open text-5xl mb-4"></i>
                        <p class="text-xs font-bold uppercase tracking-widest text-center">No Database Found<br><span class="text-[10px] font-normal lowercase">create one to get started</span></p>
                    </div>`;
                return;
            }

            listContainer.innerHTML = data.folders.map(f => `
                <div class="flex items-center justify-between p-4 bg-white/[0.02] border border-white/5 rounded-2xl hover:border-brand-neon/30 transition-all group">
                    <div class="flex items-center gap-4 truncate">
                        <div class="bg-brand-neon/10 p-3 rounded-xl text-brand-neon min-w-[45px] text-center">
                            <i class="fas fa-database text-sm"></i>
                        </div>
                        <div class="truncate">
                            <h4 class="text-white font-bold text-sm truncate">${f.folderName}</h4>
                            <p class="text-[9px] text-slate-500 font-mono truncate uppercase">${f.shareCode}</p>
                        </div>
                    </div>
                    <button onclick="copyLink('${f.shareCode}')" class="p-2 text-slate-500 hover:text-brand-neon transition">
                        <i class="fas fa-link text-xs"></i>
                    </button>
                </div>
            `).join('');
        } catch (e) {
            listContainer.innerHTML = `<p class="text-center text-red-400 font-bold py-10 text-xs">FETCH ERROR</p>`;
        } finally {
            setTimeout(() => icon.classList.remove('animate-spin'), 500);
        }
    }

    function copyLink(code) {
        const url = window.location.origin + '/db/' + code + '/data.json';
        navigator.clipboard.writeText(url);
        alert('URL Database Copied!');
    }

    async function initDb() {
        const name = document.getElementById('newDbName').value;
        const btn = document.getElementById('btnInit');
        if(!name) return;

        btn.disabled = true;
        btn.innerText = 'WAIT...';

        try {
            await fetch('/api/db/save', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json', 'x-api-key': apiKey },
                body: JSON.stringify({ 
                    dbName: name, 
                    fileName: 'init.json', 
                    content: '{"status":"active"}' 
                })
            });
            document.getElementById('newDbName').value = '';
            loadRepos();
        } finally {
            btn.disabled = false;
            btn.innerText = 'CREATE NOW';
        }
    }

    loadRepos();
</script>
