<script>
    const apiKey = localStorage.getItem('apiKey');
    const username = localStorage.getItem('username') || 'User';

    if (!apiKey) window.location.href = '/login';
    document.getElementById('displayUsername').innerText = username;
    document.getElementById('apiKeyInput').value = apiKey;

    function logout() {
        localStorage.clear();
        window.location.href = '/login';
    }

    function toggleKey() {
        const input = document.getElementById('apiKeyInput');
        input.type = input.type === 'password' ? 'text' : 'password';
    }

    function copyKey() {
        navigator.clipboard.writeText(document.getElementById('apiKeyInput').value);
        alert('API Key Copied!');
    }

    async function loadRepos() {
        const listContainer = document.getElementById('repoList');
        const icon = document.getElementById('refreshIcon');
        icon.classList.add('animate-spin');

        try {
            const res = await fetch('/api/my-folders', {
                headers: { 'x-api-key': apiKey }
            });
            const data = await res.json();
            
            if (!data.folders || data.folders.length === 0) {
                listContainer.innerHTML = `
                    <div class="flex flex-col items-center justify-center py-20">
                        <div class="bg-white/5 p-4 rounded-xl mb-4">
                            <i class="fas fa-plus text-slate-500 text-2xl"></i>
                        </div>
                        <p class="text-[10px] font-bold uppercase tracking-[0.2em] text-slate-600">No Database Found</p>
                    </div>`;
                return;
            }

            listContainer.innerHTML = data.folders.map(f => `
                <div class="flex items-center justify-between p-5 bg-[#070B14] border border-white/5 rounded-xl hover:border-[#14B8A6]/30 transition-all">
                    <div class="flex items-center gap-4">
                        <div class="bg-[#14B8A6]/10 p-3 rounded-lg text-[#14B8A6]">
                            <i class="fas fa-folder text-sm"></i>
                        </div>
                        <div>
                            <h4 class="text-white font-semibold text-sm">${f.folderName}</h4>
                            <p class="text-[10px] text-slate-500 font-mono uppercase tracking-tighter">${f.repoName}</p>
                        </div>
                    </div>
                    <button onclick="copyShareLink('${f.shareCode}', '${f.dbPath ? 'db' : 's'}')" class="text-slate-500 hover:text-[#14B8A6]">
                        <i class="fas fa-link text-sm"></i>
                    </button>
                </div>
            `).join('');
        } catch (e) {
            listContainer.innerHTML = `<p class="text-center text-red-400 py-10 text-xs">CONNECTION ERROR</p>`;
        } finally {
            setTimeout(() => icon.classList.remove('animate-spin'), 500);
        }
    }

    async function initFolder() {
        const name = document.getElementById('newFolderName').value;
        const btn = document.getElementById('btnInit');
        if(!name) return;

        btn.disabled = true;
        btn.innerText = 'PROCESSING...';

        try {
            const res = await fetch('/api/folder', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json', 'x-api-key': apiKey },
                body: JSON.stringify({ folderName: name })
            });
            if(res.ok) {
                document.getElementById('newFolderName').value = '';
                loadRepos();
            }
        } finally {
            btn.disabled = false;
            btn.innerText = 'CREATE DATABASE';
        }
    }

    function copyShareLink(code, type) {
        const url = window.location.origin + '/' + type + '/' + code + '/filename.json';
        navigator.clipboard.writeText(url);
        alert('URL Copied! Ganti filename.json dengan nama file Anda.');
    }

    loadRepos();
</script>
