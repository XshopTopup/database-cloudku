        <div class="lg:col-span-4 space-y-6 order-1">
            <div class="glass p-6 rounded-[2rem] shadow-xl">
                <div class="flex justify-between items-center mb-4">
                    <h3 class="text-white font-bold text-sm flex items-center gap-2">
                        <i class="fas fa-key text-brand-neon"></i> API ACCESS
                    </h3>
                </div>
                <div class="relative bg-black/40 rounded-2xl p-4 border border-white/5">
                    <input type="password" id="apiKeyInput" value="" readonly 
                        class="w-full bg-transparent text-brand-neon font-mono text-xs focus:outline-none pr-16">
                    <div class="absolute right-3 top-3.5 flex gap-2">
                        <button onclick="toggleKey()" class="text-slate-500 hover:text-white p-1"><i class="fas fa-eye text-xs"></i></button>
                        <button onclick="copyKey()" class="text-slate-500 hover:text-white p-1"><i class="fas fa-copy text-xs"></i></button>
                    </div>
                </div>
            </div>

            <div class="glass p-6 rounded-[2rem]">
                <h3 class="text-white font-bold text-sm mb-4 uppercase tracking-widest">New Database</h3>
                <div class="flex flex-col gap-3">
                    <input type="text" id="newDbName" placeholder="Database Name..." 
                        class="w-full bg-white/5 border border-white/10 p-4 rounded-2xl outline-none focus:border-brand-neon transition text-sm text-white">
                    <button onclick="initDb()" id="btnInit" class="w-full bg-brand-neon hover:brightness-110 text-dark-bg font-black py-4 rounded-2xl transition-all shadow-lg shadow-brand-neon/20 uppercase text-xs">
                        Create Now
                    </button>
                </div>
            </div>
        </div>

