<script>
    const apiKey = localStorage.getItem('apiKey');
    const username = localStorage.getItem('username') || 'User';

    if (!apiKey) window.location.href = '/login';
    document.getElementById('displayUsername').innerText = username;
    document.getElementById('apiKeyInput').value = apiKey;

    function logout() {
        localStorage.clear();
        window.location.href = '/login';
    }

    function toggleKey() {
        const input = document.getElementById('apiKeyInput');
        input.type = input.type === 'password' ? 'text' : 'password';
    }

    function copyKey() {
        navigator.clipboard.writeText(document.getElementById('apiKeyInput').value);
        alert('API Key Copied!');
    }

    async function loadRepos() {
        const listContainer = document.getElementById('repoList');
        const icon = document.getElementById('refreshIcon');
        icon.classList.add('animate-spin');

        try {
            const res = await fetch('/api/my-folders', {
                headers: { 'x-api-key': apiKey }
            });
            const data = await res.json();
            
            if (!data.folders || data.folders.length === 0) {
                listContainer.innerHTML = `
                    <div class="flex flex-col items-center justify-center py-20 opacity-20">
                        <i class="fas fa-folder-open text-5xl mb-4"></i>
                        <p class="text-xs font-bold uppercase tracking-widest text-center">No Repositories Found</p>
                    </div>`;
                return;
            }

            listContainer.innerHTML = data.folders.map(f => `
                <div class="flex items-center justify-between p-4 bg-white/[0.02] border border-white/5 rounded-2xl hover:border-brand-neon/30 transition-all">
                    <div class="flex items-center gap-4 truncate">
                        <div class="bg-brand-neon/10 p-3 rounded-xl text-brand-neon min-w-[45px] text-center">
                            <i class="fas fa-database text-sm"></i>
                        </div>
                        <div class="truncate">
                            <h4 class="text-white font-bold text-sm truncate">${f.folderName}</h4>
                            <p class="text-[9px] text-slate-500 font-mono truncate uppercase">${f.repoName}</p>
                        </div>
                    </div>
                    <button onclick="copyShareLink('${f.shareCode}', '${f.dbPath ? 'db' : 's'}')" class="p-2 text-slate-500 hover:text-brand-neon transition">
                        <i class="fas fa-link text-xs"></i>
                    </button>
                </div>
            `).join('');
        } catch (e) {
            listContainer.innerHTML = `<p class="text-center text-red-400 py-10 text-xs">FAILED TO LOAD DATA</p>`;
        } finally {
            setTimeout(() => icon.classList.remove('animate-spin'), 500);
        }
    }

    async function initFolder() {
        const name = document.getElementById('newFolderName').value;
        const btn = document.getElementById('btnInit');
        if(!name) return alert('Nama folder wajib diisi');

        btn.disabled = true;
        btn.innerHTML = '<i class="fas fa-circle-notch animate-spin"></i>';

        try {
            const res = await fetch('/api/folder', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json', 'x-api-key': apiKey },
                body: JSON.stringify({ folderName: name })
            });
            const data = await res.json();
            
            if(res.ok) {
                document.getElementById('newFolderName').value = '';
                loadRepos();
            } else {
                alert(data.error);
            }
        } catch (e) {
            alert('Server Error');
        } finally {
            btn.disabled = false;
            btn.innerText = 'CREATE REPOSITORY';
        }
    }

    function copyShareLink(code, type) {
        // Otomatis menyesuaikan prefix URL (/db/ atau /s/) berdasarkan tipe data
        const url = window.location.origin + '/' + type + '/' + code + '/filename.ext';
        navigator.clipboard.writeText(url);
        alert('Base Share URL Copied! Replace filename.ext with your file name.');
    }

    loadRepos();
</script>
