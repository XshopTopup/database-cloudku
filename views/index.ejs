                    <h2 class="text-xl font-bold text-white tracking-tight">Active Repositories</h2>
                    <button onclick="loadRepos()" class="bg-white/5 p-3 rounded-xl hover:text-brand-neon transition">
                        <i class="fas fa-sync-alt" id="refreshIcon"></i>
                    </button>
                </div>
                
                <div id="repoList" class="grid gap-4">
                    <div class="flex flex-col items-center justify-center py-24 opacity-20">
                        <i class="fas fa-circle-notch animate-spin text-4xl mb-4"></i>
                        <p class="text-xs font-bold uppercase tracking-widest">Synchronizing...</p>
                    </div>
                </div>
            </div>
        </div>
